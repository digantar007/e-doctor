<div class="container">
  <h2>Login</h2>
  <form class="form-horizontal" action="/patient/login" method="POST">
    <div class="form-group">
      <label class="control-label col-sm-2" for="pname">Username:</label>
      <div class="col-sm-10">
        <input type="pname" class="form-control" id="pname" placeholder="Enter pname" name="pname">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="patientPassword">Password:</label>
      <div class="col-sm-10">          
        <input type="password" class="form-control" id="patientPassword" placeholder="Enter password" name="patientPassword">
      </div>
    </div>

    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>
