<div id="response" class="alert alert-success" role="alert">Login successful...</div>

<h1>Welcome {{doctorName}}</h1>


<div class="container">
	<div class="row">
		<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
	        <thead>
	            <tr>
	                <th>Name</th>
	                <th>Age</th>
	                <th>Contact</th>
	                <th>Disease</th>
	                <th></th>
	            </tr>
	        </thead>
	        <tbody>
	        	{{#each  patientlist}}
		            <tr>
		                <td>{{p_name}}</td>
		                <td>{{age}}</td>
		                <td>{{mobile}}</td>
		                <td>{{disease}}</td>
		                <td class="text-center"><button  class="btn btn-success">Confirm</button>&nbsp; <button class="btn btn-info">Schedule</button>&nbsp; <button class="btn btn-danger"> Reject</button></td>
		            </tr>
		        {{/each}}
	        </tbody>
	</table>
	</div>
</div>

<script type="text/javascript">
	setTimeout(function(){
  if ($('#response').length > 0) {
    $('#response').remove();
  }
}, 2000)
</script>
